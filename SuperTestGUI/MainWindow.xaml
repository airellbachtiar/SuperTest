<Window
    x:Class="SuperTestWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuperTestWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1080"
    Height="720"
    mc:Ignorable="d">

    <Grid>
        <!--  Define grid with rows and columns  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Row for UploadReqIFButton and label  -->
            <RowDefinition Height="Auto" />
            <!--  Row for GenerateFeatureFileButton  -->
            <RowDefinition Height="*" />
            <!--  Row for the first TreeView  -->
            <RowDefinition Height="Auto" />
            <!--  Row for StatusMessage TextBox  -->
            <RowDefinition Height="*" />
            <!--  Row for the second TreeView  -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <!--  Column for buttons  -->
            <ColumnDefinition Width="*" />
            <!--  Column for TreeView and TextBox  -->
        </Grid.ColumnDefinitions>

        <!--  Upload ReqIF Button  -->
        <Button
            x:Name="UploadReqIFButton"
            Grid.Row="0"
            Grid.Column="0"
            Width="150"
            Height="32"
            Margin="10"
            Command="{Binding UploadReqIFCommand}"
            Content="Choose a File to Upload" />

        <!--  Label for showing selected file  -->
        <Label
            x:Name="labelReqIFFile"
            Grid.Row="0"
            Grid.Column="1"
            Height="32"
            Margin="10,0,10,0"
            VerticalAlignment="Center"
            Content="{Binding ChosenFile}" />

        <!--  Generate Feature File Button  -->
        <Button
            x:Name="GenerateFeatureFileButton"
            Grid.Row="1"
            Grid.Column="0"
            Width="150"
            Height="32"
            Margin="10"
            Content="Generate Feature File" />

        <!--  TreeView for Requirements  -->
        <TreeView
            x:Name="requirementsTreeViewer"
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ItemsSource="{Binding Requirements}" />

        <!--  Status Message TextBox  -->
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Width="300"
            Height="29"
            Margin="10"
            Text="{Binding StatusMessage}"
            TextWrapping="Wrap" />

        <!--  Second TreeView for ReqIF File Titles  -->
        <TreeView
            Grid.Row="4"
            Grid.Column="1"
            Width="Auto"
            Margin="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ItemsSource="{Binding ReqIFFileTitles}" />
    </Grid>
</Window>
