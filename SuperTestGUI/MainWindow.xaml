<Window
    x:Class="SuperTestWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuperTestWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1080"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="UploadReqIFButton"
            Width="150"
            Height="32"
            Margin="60,63,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding UploadReqIFCommand}"
            Content="Choose a File to Upload" />
        <Label
            x:Name="labelReqIFFile"
            Margin="243,66,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="No file chosen" />
        <TreeView
            x:Name="requirementsTreeViewer"
            Margin="243,373,92,103"
            ItemsSource="{Binding Requirements}" />
        <Button
            x:Name="GenerateFeatureFileButton"
            Width="150"
            Height="32"
            Margin="60,144,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Generate Feature File" />
        <TextBox
            Width="238"
            Height="29"
            Margin="524,58,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding StatusMessage}"
            TextWrapping="Wrap" />
        <TreeView
            Width="745"
            Height="228"
            Margin="243,110,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding ReqIFFileTitles}" />

    </Grid>
</Window>
